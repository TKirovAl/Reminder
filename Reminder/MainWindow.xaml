<Window x:Class="ReminderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Напоминания" Height="700" Width="900"
        Background="#F5F5F5" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" Color="#CCCCCC" BlurRadius="15" 
                         ShadowDepth="3" Opacity="0.25"/>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Форма создания напоминания -->
        <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="30" 
                Effect="{StaticResource CardShadow}" Margin="0,0,0,25">

            <StackPanel>
                <TextBlock Text="Создать напоминание" FontSize="24" FontWeight="Bold" 
                          Foreground="#2C2F33" Margin="0,0,0,20"/>

                <!-- Текст напоминания -->
                <TextBlock Text="Что напомнить?" Foreground="#72767D" FontSize="13" 
                          FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox x:Name="TextInput" FontSize="15" Padding="12" Height="45"
                        BorderBrush="#DCDDDE" BorderThickness="1" VerticalContentAlignment="Center"
                        Background="White" Foreground="#2C2F33"/>

                <!-- Дата и время -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Дата" Foreground="#72767D" FontSize="13" 
                                  FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <DatePicker x:Name="DateInput" FontSize="15" Height="45"
                                   BorderBrush="#DCDDDE" BorderThickness="1"
                                   VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Время" Foreground="#72767D" FontSize="13" 
                                  FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox x:Name="TimeInput" Text="12:00" FontSize="15" Padding="12" Height="45"
                                BorderBrush="#DCDDDE" BorderThickness="1" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Переключатель повтора -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Повторять" Foreground="#2C2F33" 
                              FontSize="15" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <CheckBox x:Name="RepeatCheckBox" Grid.Column="1" 
                             VerticalAlignment="Center" Checked="RepeatCheckBox_Changed"
                             Unchecked="RepeatCheckBox_Changed"/>
                </Grid>

                <!-- Настройки повтора (скрыты по умолчанию) -->
                <StackPanel x:Name="RepeatPanel" Visibility="Collapsed" Margin="0,15,0,0">
                    <Border Background="#F6F6F7" CornerRadius="8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Настройки повтора" Foreground="#2C2F33" 
                                      FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <RadioButton x:Name="MinutesRadio" Content="Каждые несколько минут" 
                                        GroupName="RepeatType" Margin="0,0,0,10" FontSize="14"
                                        Checked="RepeatType_Changed"/>
                            <RadioButton x:Name="HoursRadio" Content="Каждые несколько часов" 
                                        GroupName="RepeatType" Margin="0,0,0,10" FontSize="14"
                                        Checked="RepeatType_Changed"/>
                            <RadioButton x:Name="DaysRadio" Content="Каждые несколько дней" 
                                        GroupName="RepeatType" IsChecked="True" Margin="0,0,0,15" FontSize="14"
                                        Checked="RepeatType_Changed"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Интервал:" Foreground="#72767D" 
                                          FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="IntervalInput" Grid.Column="1" Text="1" 
                                        FontSize="14" Padding="8" Height="35" VerticalContentAlignment="Center"
                                        BorderBrush="#DCDDDE" BorderThickness="1"/>
                                <TextBlock x:Name="IntervalLabel" Grid.Column="2" Text="дн." 
                                          Foreground="#72767D" FontSize="14" 
                                          VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Content="Создать напоминание" Click="AddReminder_Click" 
                       Margin="0,25,0,0" Padding="0" Height="50" FontSize="15" FontWeight="SemiBold"
                       Background="#5865F2" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4752C4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Список напоминаний -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="30"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Мои напоминания" FontSize="24" 
                          FontWeight="Bold" Foreground="#2C2F33" Margin="0,0,0,20"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="RemindersList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F6F6F7" CornerRadius="8" Padding="20" 
                                       Margin="0,0,0,12" BorderBrush="#E3E5E8" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Иконка -->
                                        <Border Grid.Column="0" Background="#5865F2" 
                                               Width="40" Height="40" CornerRadius="20"
                                               Margin="0,0,15,0">
                                            <TextBlock Text="🔔" FontSize="20" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Информация -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Text}" FontSize="16" 
                                                      FontWeight="SemiBold" Foreground="#2C2F33"
                                                      TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding TimeInfo}" FontSize="13" 
                                                      Foreground="#72767D" Margin="0,5,0,0"/>
                                        </StackPanel>

                                        <!-- Кнопка удаления -->
                                        <Button Grid.Column="2" Content="✕" 
                                               Click="DeleteReminder_Click" Tag="{Binding Original}"
                                               Width="36" Height="36" FontSize="18"
                                               Background="#ED4245" Foreground="White" 
                                               BorderThickness="0" Cursor="Hand"
                                               VerticalAlignment="Center">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                       CornerRadius="18">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                    VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#C03537"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>